@{
}

@model List<StudentPortal.Web.Models.Entities.Student>
<h1>Öğrenci Listesi</h1>

<table class="table">
    <thead>
        <tr>
            <th>Öğrenci Id</th>
            <th>Öğrenci Ad Soyad</th>
            <th>Öğrenci E-mail</th>
            <th>Öğrenci Telefon Numarası</th>
            <th>Öğrenci Kayıt Durumu</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var student in Model)
        {
            <tr>
                <td>@student.Id</td>
                <td>@student.Name</td>
                <td>@student.Email</td>
                <td>@student.Phone</td>
                <td>
                    @if (student.Subscribed)
                    {
                        <span>Kayıtlı</span>
                    }
                    else
                    {
                        <span>Kayıt Yenileme</span>
                    }
                </td>
                <td>
                    <a class="btn btn-primary" asp-controller="Students" asp-action="Edit" asp-route-id="@student.Id">Düzenle</a>
                </td>
            </tr>
        }

    </tbody>





</table>