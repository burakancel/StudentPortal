@model StudentPortal.Web.Models.AddStudentViewModel

<h1>Öğrenci Kaydı Oluştur</h1>

<style>

    .form-control {
        width: 350px; 
    }

    body {
        background-image: url("/image/giphy.gif");
        background-size: auto; /* Gif'in orijinal boyutunu koruyun */
        background-repeat: no-repeat;
        background-position: top right; /* Sağ üst köşeye hizala */
        background-attachment: fixed;
        height: 100vh;
        margin: 0;
        display: flex;
        flex-direction: column;
    }


 

</style>


<form method="post">

<div class="mt-3">
    <label class="form-label">Ad Soyad</label>
    <input type="text" class="form-control" asp-for="Name"/>
    
</div>

<div class="mt-2">
    <label class="form-label">Email</label>
    <input type="email" class="form-control"asp-for="Email" />

</div>

<div class="mt-3">
    <label class="form-label">Telefon Numarası</label>
    <input type="text" class="form-control" asp-for="Phone" />

</div>

<div class="mt-3">
    <input type="checkbox" class="form-check-input" itemid="Subscribed" asp-for="Subscribed" />
    <label class="form-check-label" for="Subscribed">Kayıt Edildi</label>

</div>
<div class="mt-3">
    <button type_="submit" class="btn btn-primary">Kaydet</button>
</div>
</form>